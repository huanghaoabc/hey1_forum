/* pages/integral/index/index.wxss */
@import "/components/common.wxss";

.product{
  margin-top: 24rpx;
}
.product-title{
  padding: 14rpx 0;
  background-color: #fff;
}
.product-title-name{
  border: 2rpx solid #e9eaec;
  padding: 10rpx 34rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #1c2438;
}
.product-title-line{
  width: 130rpx;
  border-top: 2rpx solid #e9eaec;
  border-radius: 1rpx;
}

.product-list{
  justify-content:space-between;
  padding: 24rpx;
}
.product-item{
  width: 340rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  padding-bottom: 10rpx;
  /* box-shadow:5rpx 2rpx 6rpx #dddee1; */
}
.product-img{
  width: 100%;
  height: 320rpx;
  position: relative;
}
.product-img image{
  width: 100%;
  height: 320rpx;
}
.product-name{
  font-size:26rpx;
  color: #1c2438;
  padding: 10rpx 24rpx;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.product-money{
  font-size: 22rpx;
  color: #f33535;
  padding: 0 24rpx;
}
.product-money text{
  font-size: 38rpx;
  margin-right: 10rpx;
  font-weight: 500;
}
.empty{
  position: absolute;
  top: 50%;
  left: 50%;
  height: 240rpx;
  width: 240rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  text-align: center;
  line-height: 240rpx;
  color: #fff;
  font-size: 42rpx;
  margin-top: -120rpx;
  margin-left: -120rpx;
}