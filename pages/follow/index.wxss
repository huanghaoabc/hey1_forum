/* pages/follow/index.wxss */
@import "/components/common.wxss";

.list-row{
  width: 720rpx;
  background-color: #fff;
  border-radius: 30rpx;
  margin: 15rpx auto;
  /* box-shadow: 0rpx 4rpx 20rpx 0rpx #AAAAAA; */
  padding-bottom: 24rpx;
  padding-top: 24rpx;
}

.row-icod{
  margin-left: 24rpx;
}

.row-icod image{
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}

.row-msg{
  margin-left: 24rpx;
}

.row-title{
  font-size: 32rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.row-des{
  margin-bottom: 10rpx;
  margin-top: 5rpx;
  font-size: 24rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.entry{
  height: 50rpx;
  width: 90rpx;
  color: #fff;
  background-color: #F33535;
  border-radius: 30rpx;
  text-align: center;
  line-height: 40rpx;
  margin-top: 24rpx;
  margin-right: 24rpx;
  font-size: 26rpx;
}

.unentry{
  height: 50rpx;
  width: 120rpx;
  color: #F33535;
  background-color: #fcf1f1;
  border-radius: 30rpx;
  text-align: center;
  line-height: 40rpx;
  margin-top: 24rpx;
  margin-right: 24rpx;
  font-size: 26rpx;
}